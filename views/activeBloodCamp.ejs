<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Active Blood Donation Camps | LifebloX</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
            font-size: 1rem; /* Default font size */
        }

        @media (max-width: 800px) {
            body {
                font-size: 0.9rem; /* Smaller font size on small screens */
            }
        }

        .container {
            max-width: 900px;
            background: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .camp-card {
            margin-bottom: 15px;
            border-left: 4px solid #dc3545;
            padding: 15px;
            background: #ffffff;
            border-radius: 8px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        .map-container {
            width: 100%;
            height: 250px;
            border-radius: 10px;
            overflow: hidden;
        }

        .map-container iframe {
            width: 100%;
            height: 100%;
            border: 0;
        }
        
        .register-success {
            color: green;
            font-weight: bold;
            display: none;
        }
        
        .register-error {
            color: red;
            font-weight: bold;
            display: none;
        }
    </style>
</head>
<body>
    <div class="container my-4">
        <div class="d-flex justify-content-between">
            <div class="mb-2 ">
                <a href="/" class="text-danger fw-bold text-decoration-none"> &larr; Back to Home</a>
            </div>
            <div class="mb-2 ">
                <% if (donorData) { %>
                <a href="/dashboard" class="text-danger fw-bold text-decoration-none" id="backToDashLink">Back to Dashboard &rarr;</a>
                <% } %>
            </div>
        </div>
        <h2 class="text-center text-danger fw-bold mb-4">Active Blood Donation Camps</h2>

        <!-- Location Selection -->
        <div class="mb-3">
            <label for="location" class="form-label">Select Location</label>
            <select class="form-select" id="location">
                <option value="" selected>Select city</option>
                <option value="Mumbai">Mumbai</option>
                <option value="Ahmedabad">Ahmedabad</option>
                <option value="Delhi">Delhi</option>
                <option value="Lucknow">Lucknow</option>
                <option value="Bangalore">Bangalore</option>
            </select>
        </div>

        <button type="button" class="btn btn-danger w-100" id="findCampsBtn">Find Camps</button>

        <div class="result-container mt-4">
            <h4 class="mb-3">Blood Donation Camps in <span id="selectedCity">All Cities</span></h4>

            <!-- Loading Indicator -->
            <div class="text-center d-none" id="loadingIndicator">
                <div class="spinner-border text-danger" role="status"></div>
                <p class="mt-2">Loading camps...</p>
            </div>

            <!-- No Camps Message -->
            <div class="no-camps text-center d-none" id="noCampsMessage">
                <p>No active blood donation camps found in <span class="selected-city-text">Selected City</span>.</p>
                <p>Please check back later or select another city.</p>
            </div>

            <!-- Initial Selection Message -->
            <div class="text-center" id="initialMessage">
                <p>Please select a city and click "Find Camps" to view available blood donation camps.</p>
            </div>

            <!-- Camp Cards Container -->
            <div id="campCardsContainer" class="d-none">
                <% if (activeCamps && activeCamps.length > 0) { %> 
                    <% activeCamps.forEach((camp) => { %>
                        <div class="camp-card" data-city="<%= camp.city %>">
                            <div class="row g-3">
                                <!-- Camp Details -->
                                <div class="col-md-7">
                                    <h5 class="card-title fs-4"><%= camp.campName %></h5>
                                    <p class="card-text">
                                        <strong>Date:</strong> <%= camp.date.toLocaleDateString() %><br>
                                        <strong>Time:</strong> <%= camp.startTime %> - <%= camp.endTime %><br>
                                        <strong>City:</strong> <%= camp.city %><br>
                                        <strong>Blood Bank:</strong> <%= camp.bloodBank %><br>
                                        <strong>Contact:</strong> <%= camp.contactNumber %><br>
                                        <strong>Email:</strong> <%= camp.email %><br>
                                    </p>
                                    <% if (donorData && camp.donors.some(donor => donor.donorEmail === donorData.emailId)) { %>
                                        <button type="button" class="btn btn-success register-btn" disabled>
                                            Registered
                                        </button>
                                    <% } else { %>
                                        <button type="button" class="btn btn-danger register-btn" data-camp-id="<%= camp._id %>">
                                            Register For Blood Camp
                                        </button>
                                    <% } %>
                                
                                    <p class="register-success" id="success-<%= camp._id %>">Registration successful! You are registered for this camp.</p>
                                    <p class="register-error" id="error-<%= camp._id %>"></p>
                                </div>

                                <!-- Map for larger screens -->
                                <div class="col-md-5 text-center">
                                    <div class="map-container">
                                        <%- camp.location %> <!-- Embedded Google Map -->
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                <% } %>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const locationSelect = document.getElementById('location');
            const findCampsBtn = document.getElementById('findCampsBtn');
            const selectedCitySpan = document.getElementById('selectedCity');
            const campCardsContainer = document.getElementById('campCardsContainer');
            const noCampsMessage = document.getElementById('noCampsMessage');
            const loadingIndicator = document.getElementById('loadingIndicator');
            const initialMessage = document.getElementById('initialMessage');
            const selectedCityTexts = document.querySelectorAll('.selected-city-text');

            findCampsBtn.addEventListener('click', function() {
                const selectedCity = locationSelect.value;
                
                if (!selectedCity) {
                    alert('Please select a city first');
                    return;
                }
                
                loadingIndicator.classList.remove('d-none');
                campCardsContainer.classList.add('d-none');
                noCampsMessage.classList.add('d-none');
                initialMessage.classList.add('d-none');

                setTimeout(function() {
                    selectedCitySpan.textContent = selectedCity;
                    selectedCityTexts.forEach(el => el.textContent = selectedCity);
                    filterCampsByCity(selectedCity);
                    loadingIndicator.classList.add('d-none');
                    campCardsContainer.classList.remove('d-none');
                }, 500);
            });

            function filterCampsByCity(city) {
                let visibleCampsCount = 0;
                const campCards = document.querySelectorAll('.camp-card');

                campCards.forEach(card => {
                    const cardCity = card.getAttribute('data-city');
                    if (cardCity === city) {
                        card.style.display = 'block';
                        visibleCampsCount++;
                    } else {
                        card.style.display = 'none';
                    }
                });

                noCampsMessage.classList.toggle('d-none', visibleCampsCount > 0);
            }

            // Handle registration button clicks
            document.addEventListener('click', function(event) {
                if (event.target.classList.contains('register-btn')) {
                    const campId = event.target.getAttribute('data-camp-id');
                    registerForCamp(campId, event.target);
                }
            });
            
            // Function to handle camp registration
            function registerForCamp(campId, button) {
                // Disable the button during processing
                button.disabled = true;
                button.textContent = 'Registering...';

                // Hide any previous messages
                document.getElementById(`success-${campId}`).style.display = 'none';
                document.getElementById(`error-${campId}`).style.display = 'none';
                document.getElementById(`error-${campId}`).textContent = '';

                // Send registration request
                fetch('/activeBloodCamp', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ campId: campId })
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        // Show success message
                        document.getElementById(`success-${campId}`).style.display = 'block';

                        // Change button to green and keep disabled
                        button.classList.remove('btn-danger');
                        button.classList.add('btn-success');
                        button.textContent = 'Registered';
                        button.disabled = true;
                    } else {
                        // Show error message
                        document.getElementById(`error-${campId}`).textContent = data.message;
                        document.getElementById(`error-${campId}`).style.display = 'block';

                        // Re-enable the button (only for errors)
                        button.disabled = false;
                        button.textContent = 'Register For Blood Camp';

                        // If not logged in, redirect to login page
                        if (data.message.includes("login")) {
                            setTimeout(() => {
                                window.location.href = '/donorLogin';
                            }, 2000);
                        }
                    }
                })
                .catch(error => {
                    console.error('Error:', error);

                    // Re-enable the button
                    button.disabled = false;
                    button.textContent = 'Register For Blood Camp';

                    // Show error message
                    document.getElementById(`error-${campId}`).textContent = 'An error occurred. Please try again.';
                    document.getElementById(`error-${campId}`).style.display = 'block';
                });
            }
        });
    </script>
</body>
</html>