<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blood Bank Registration | LifebloX</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            background-color: #f8f9fa;
        }
        .container {
            max-width: 700px;
            width: 100%;
        }
        @media (max-width: 576px) {
            .container {
                padding: 15px;
                box-shadow: none;
            }
        }
    </style>
     <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
     <link rel="stylesheet" href="style.css">
</head>
<body class="gradient-background">
    <div class="container p-4 bg-light rounded shadow-lg">
            <!-- Home Link -->
    <div class="d-flex justify-content-start mb-2">
        <a href="/" class="text-danger fw-bold text-decoration-none"> &larr; Back to Home</a>
    </div>
        <h2 class="text-center text-danger fw-bold mb-4">Register Blood Bank</h2>
        <form id="bloodBankForm" action="/bloodbankRegister" method="POST"  novalidate>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label" for="city">City</label>
                    <select class="form-select" id="city" required>
                        <option selected disabled>Select City</option>
                        <option>Ahmedabad</option>
                        <option>Mumbai</option>
                        <option>Delhi</option>
                        <option>Lucknow</option>
                        <option>Banglore</option>
                    </select>
                    <div class="invalid-feedback">Please select a city.</div>
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label">Blood Bank Name</label>
                    <input type="text" class="form-control" id="bloodBankName" required minlength="3">
                    <div class="invalid-feedback">Please enter a valid blood bank name (at least 3 characters).</div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">Parent Hospital Name</label>
                    <input type="text" class="form-control" id="hospitalName" required>
                    <div class="invalid-feedback">Please enter the parent hospital name.</div>
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label">Category</label>
                    <select class="form-select" id="category" required>
                        <option selected disabled>Select Category</option>
                        <option>Government</option>
                        <option>Red Cross</option>
                        <option>Charitable/Voluntary</option>
                        <option>Private</option>
                    </select>
                    <div class="invalid-feedback">Please select a category.</div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">Contact Person</label>
                    <input type="text" class="form-control" id="contactPerson" required minlength="3">
                    <div class="invalid-feedback">Please enter a valid contact person name.</div>
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label">Email</label>
                    <input type="email" class="form-control" id="email" required>
                    <div class="invalid-feedback">Please enter a valid email address.</div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">Contact No</label>
                    <input type="tel" class="form-control" id="contactNo" required pattern="[0-9]{10}">
                    <div class="invalid-feedback">Please enter a valid 10-digit contact number.</div>
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label">License No</label>
                    <input type="text" class="form-control" id="licenseNo" required>
                    <div class="invalid-feedback">Please enter a valid license number.</div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">Address</label>
                    <input type="text" class="form-control" id="address1" required>
                    <div class="invalid-feedback">Please enter the address.</div>
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label">Pincode</label>
                    <input type="text" class="form-control" id="pincode" required pattern="[0-9]{6}">
                    <div class="invalid-feedback">Please enter a valid 6-digit pincode.</div>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-6">
                    <label class="form-label">Password</label>
                    <input type="password" class="form-control" id="password" required minlength="6" maxlength="13">
                    <div class="invalid-feedback">Password must be 6-13 characters long.</div>
                </div>
                <div class="col-md-6">
                    <label class="form-label">Confirm Password</label>
                    <input type="password" class="form-control" id="confirmPassword" required maxlength="13">
                    <div class="invalid-feedback">Passwords do not match.</div>
                </div>
            </div>
            <div class="d-grid">
                <button type="submit" class="btn btn-danger fw-bold">Register</button>
            </div>
            
            <div class="text-center mt-3">
                <p class="mb-0">Already have an account? <a href="/bloodbankLogin" class="text-danger fw-bold text-decoration-none">Login here</a></p>
            </div>
        </form>
    </div>
<script>
document.getElementById('bloodBankForm').addEventListener('submit', async function(e) {
    e.preventDefault();

    const form = this;
    const inputs = form.querySelectorAll('input, select');
    let isValid = true;

    inputs.forEach(input => {
        if (!input.value.trim()) {
            input.classList.add('is-invalid');
            isValid = false;
        } else {
            input.classList.remove('is-invalid');
        }

        // Specific validations
        switch(input.id) {
            case 'contactNo':
                if (!/^[0-9]{10}$/.test(input.value)) {
                    input.classList.add('is-invalid');
                    isValid = false;
                }
                break;
            case 'pincode':
                if (!/^[0-9]{6}$/.test(input.value)) {
                    input.classList.add('is-invalid');
                    isValid = false;
                }
                break;
            case 'email':
                if (!/^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(input.value)) {
                    input.classList.add('is-invalid');
                    isValid = false;
                }
                break;
            case 'password':
                if (input.value.length < 6 || input.value.length > 13) {
                    input.classList.add('is-invalid');
                    isValid = false;
                }
                break;
        }
    });

    // Password match validation
    const password = document.getElementById('password');
    const confirmPassword = document.getElementById('confirmPassword');
    if (password.value !== confirmPassword.value) {
        password.classList.add('is-invalid');
        confirmPassword.classList.add('is-invalid');
        isValid = false;
    }

    if (!isValid) return;

    const formData = {
        city: document.getElementById('city').value,
        bloodBankName: document.getElementById('bloodBankName').value,
        hospitalName: document.getElementById('hospitalName').value,
        category: document.getElementById('category').value,
        contactPerson: document.getElementById('contactPerson').value,
        email: document.getElementById('email').value,
        contactNo: document.getElementById('contactNo').value,
        licenseNo: document.getElementById('licenseNo').value,
        address: document.getElementById('address1').value,
        pincode: document.getElementById('pincode').value,
        password: password.value
    };

    try {
        const response = await axios.post('/bloodbankRegister', formData);
        
        // Check for successful response and redirect
        if (response.data.success) {
            window.location.href = '/bloodbankLogin';
        } else {
            alert(response.data.message || 'Registration failed');
        }
    } catch (error) {
        console.error('Registration error:', error);
        alert(error.response?.data?.message || 'Registration failed');
    }
});
</script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>